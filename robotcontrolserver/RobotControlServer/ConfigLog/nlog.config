	<rules>

		<!--Bỏ qua k ghi những thông tin về hệ thống mặc định-->
		<logger name="Microsoft.*" minlevel="Info" writeTo="" final="true" />
		<logger name="Microsoft.*" minlevel="Debug" writeTo="" final="true" />
		<logger name="Grpc.*" minlevel="Info" writeTo="" final="true" />
		<logger name="Grpc.*" minlevel="Debug" writeTo="" final="true" />



		<!--Log cho các phần Api, Db, MW-->
		<logger name="LogDb" levels="Info" writeTo="logDbTopRun_info_target" final="true" />
		<logger name="LogDb" levels="Warn" writeTo="logDbTopRun_warn_target" final="true" />
		<logger name="LogDb" levels="Error" writeTo="logDbTopRun_error_target" final="true" />
		<logger name="LogDb" levels="Debug" writeTo="logDbTopRun_debug_target" final="true" />

		<logger name="logApi" levels="Info" writeTo="logApi_info_target" final="true" />
		<logger name="logApi" levels="Warn" writeTo="logApi_warn_target" final="true" />
		<logger name="logApi" levels="Error" writeTo="logApi_error_target" final="true" />
		<logger name="logApi" levels="Debug" writeTo="logApi_debug_target" final="true" />

		<logger name="logTopRunrp" minlevel="Info" writeTo="logResponse_info_target" final="true" />
		<logger name="logTopRunrp" minlevel="Warn" writeTo="logResponse_warn_target" final="true" />
		<logger name="logTopRunrp" minlevel="Error" writeTo="logResponse_error_target" final="true" />
		<logger name="logTopRunrp" minlevel="Debug" writeTo="logResponse_debug_target" final="true" />

		<!--Log vào file mặc định-->
		<logger name="*" levels="Warn" writeTo="warn_target" final="true" />
		<logger name="*" levels="Info" writeTo="info_target" final="true" />
		<logger name="*" levels="Debug" writeTo="debug_target" final="true" />
		<logger name="*" levels="Error" writeTo="error_target" final="true" />
	</rules>
